{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev Server",
			"type": "shell",
			"command": "pnpm dev",
			"problemMatcher": [],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Format",
			"type": "shell",
			"command": "pnpm format --write",
			"problemMatcher": [],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Lint",
			"type": "shell",
			"command": "pnpm lint --fix",
			"problemMatcher": ["$eslint-stylish"],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Check",
			"type": "shell",
			"command": "pnpm check",
			"problemMatcher": ["$tsc"],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "pnpm build",
			"problemMatcher": [],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Generate i18n",
			"type": "shell",
			"command": "pnpm generate-i18n",
			"problemMatcher": [],
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Validate (CI Checks)",
			"dependsOrder": "sequence",
			"dependsOn": ["Generate i18n", "Format", "Lint", "Check"],
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"focus": true
			}
		}
	]
}
